<% page_title "User &ldquo;#{h @user.login}&rdquo;" do %>
  Member since <%= datestamp(@user.created_at) %>
<% end %>

<% unless @user.profile_text.blank? %>
  <div id="user_profile_text">
    <%= render_body(@user.profile_text) %>
  </div>
  <hr />
<% end %>

<div class="left_column">  
  <h3>Created these pages</h3>
  
  <ul>
    <% @created_pages.each do |page| %>
      <li><%= page_link(page) %></li>
    <% end %>
  </ul>
</div>

<div class="right_column">
  <h3>Very useful information</h3>
  <p>Discussions, perhaps?</p>
</div>

<div class="clear"></div>

<h2>20 most recent revisions</h2>

<% grouped_revision_log(@revisions, ["#", "Date", "Page", ""]) do |revision, timestamp| %>
  <td><%= link_to "##{revision.revision_number}", page_revision_path(revision.page, revision) %></td>
  <td><%= timestamp %></td>
  <td><%= page_link(revision.page) %></td>
  <td><%= link_to "Changes", page_revision_changes_path(revision.page, revision) %></td>
<% end %>