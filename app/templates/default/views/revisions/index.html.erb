<% page_title "Revisions for &ldquo;#{link_to @page.title, page_path(@page)}&rdquo;" %>
<div id="page_meta">&nbsp;</div>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Date</th>
      <th>Message</th>
      <th>By</th>
      <th></th>
    </tr>
  </thead>
  
  <tbody>
    <% @revisions.each do |revision| %>
      <tr>
        <td><%= revision.revision_number %></td>
        <td><%= revision_link(@page, revision) %></td>
        <td><%= revision.message %></td>
        <td><%= revision_author_stamp(revision) %></td>
        <td><%= link_to "Changes", page_revision_changes_path(@page, revision) %></td>
      </tr>
    <% end %>
  </tbody>
</table>