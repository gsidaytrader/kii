<% page_title "Rolling back &ldquo;#{page_link(@page)}&rdquo; to revision \##{@revision.revision_number}" do %>
  <%= link_to "Back", page_revision_path(@page, @revision) %>
<% end %>

<p>This is a one-way operation that will remove all revisions created after revision #<%= @revision.revision_number %></p>

<%= button_to "Rollback!", page_rollback_revision_path(@page, @revision), :method => :post %>