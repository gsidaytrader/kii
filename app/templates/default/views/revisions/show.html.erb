<% page_title "Revision \##{@revision.revision_number} of &ldquo;#{link_to h(@page.title), page_path(@page)}&rdquo;" %>
<div id="page_meta">
  <%= link_to "Back to list", page_revisions_path(@page) %>
  <%= link_to "Revert to this revision", confirm_revert_page_revision_path(@page, @revision) unless @page.revisions.current == @revision %>
  As of <%= datetimestamp(@revision.created_at) %>
</div>

<%= render_body(@revision.body) %>